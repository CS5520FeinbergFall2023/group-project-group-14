<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activities.PostContentActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back"
        android:isScrollContainer="true"
        app:titleTextColor="#ff0000"
        app:titleMarginStart="100dp">
        <TextView
            android:text="Post Content"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="#EEEEEE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- icon + user name + timestamp -->
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <edu.northeastern.gymhub.Utils.CircleImageView
                android:id="@+id/article_head_pic"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head_img"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="gymhubuser"
                    android:id="@+id/content_userName"
                    android:textSize="20sp"
                    android:textColor="@color/articleUserNameColor"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <TextView
                    android:text="2023.12.25"
                    android:textSize="13sp"
                    android:id="@+id/content_release_time"
                    android:layout_width="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- post content + comment count + like count -->
        <LinearLayout
            android:id="@+id/ll_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:text="post title"
                android:padding="10dp"
                android:textSize="20sp"
                android:id="@+id/content_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"/>
            <TextView
                android:text="post content"
                android:padding="10dp"
                android:id="@+id/content_article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#EEEEEE"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Comments"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/content_comment_sum"
                        android:text="100"
                        android:paddingLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Likes"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/star_sum"
                        android:text="100"
                        android:paddingLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <ListView
                android:padding="10dp"
                android:id="@+id/content_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- write comment area -->
        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:minHeight="80dp"
            android:padding="10dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/comment_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/custom_edittext_background"
                android:layout_height="match_parent"
                android:hint="Write some comment..."/>
            <TextView
                android:id="@+id/send_comment"
                android:text="Submit"
                android:textSize="17sp"
                android:textColor="@color/send"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <!-- bottom area -->
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/comment"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/comment"/>
                <TextView
                    android:id="@+id/commentSum"
                    android:text="Comment"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_star"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/article_star"/>
                <TextView
                    android:id="@+id/tv_starSum"
                    android:text="Like"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>